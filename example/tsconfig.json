{
  "compilerOptions": {
    "target"                 : "ESNext",
    "useDefineForClassFields": true,
    "module"                 : "ESNext",
    "moduleResolution"       : "Node",
    "strict"                 : true,
    "jsx"                    : "preserve",
    "resolveJsonModule"      : true,
    "isolatedModules"        : true,
    "esModuleInterop"        : true,
    "lib"                    : ["ESNext", "DOM"],
    "skipLibCheck"           : true,
    "noEmit"                 : true,
    "types"                  : ["vite/client"]
  },
  "include": [
    "example/src/**/*.ts",
    "example/src/**/*.d.ts",
    "example/src/**/*.tsx",
    "example/src/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }],
}
